---
import Layout from '../layouts/Layout.astro';
import EventForm from '../components/EventForm.jsx';
import EventList from '../components/EventList.jsx';
---

<Layout title="Event Logger">
  <main class="grid h-screen place-items-center p-4">
    <h1 class="text-5xl font-bold mb-8 text-center">Event Logger</h1>
    <div class="flex flex-col sm:flex-row gap-8 sm:gap-16 w-full max-w-5xl">
      <div class="bg-white p-6 rounded-lg shadow-lg w-full sm:w-1/2">
        <EventForm client:load />
      </div>
      <div class="bg-white p-6 rounded-lg shadow-lg w-full sm:w-1/2">
        <EventList client:load />
      </div>
    </div>
  </main>
</Layout>